                                        //ADIONAR DESCONTO
                                        case 1:

                                            System.out.println("\nNosso Desconto Eh Utilizado No Valor Total Do Carrinho!\n");
                                            System.out.print("Digite O Nome do Cupom de Desconto: ");
                                            nome_cupom = nome_cupons.nextLine();
                                            System.out.print("Digite O Valor Do Desconto: % ");
                                            desconto = descontos.nextFloat();

                                            desconto = (desconto / 100);

                                            System.out.println("Desconto adicionado com sucesso");

                                            break;

                                        //REMOVER DESCONTO
                                        case 2:

                                            System.out.println("\nDeseja Remover O Desconto: ");
                                            System.out.println("\n1  |  SIM");
                                            System.out.println("2  |  NAO\n");
                                            System.out.print("Digite Um Numero Para PROSSEGUIR: ");
                                            remover_desconto = opcoes.nextInt();

                                            switch (remover_desconto) {

                                                case 1:

                                                    desconto = 0;
                                                    nome_cupom = null;
                                                    System.out.println("\n=X=X=X= Desconto REMOVIDO Com Sucesso =X=X=X=\n");

                                                    break;

                                                case 2:

                                                    System.out.println("\n=X=X=X= Saindo Do Menu Remover Desconto =X=X=X=\n");

                                                    break;

                                                default:

                                                    System.out.println("\n=X=X=X= Comando invalido =X=X=X=\n");

                                                    break;

                                            }

                                            break;

                                        //SAIR DO GERENCIADOR DE DESCONTO
                                        case 3:

                                            System.out.println("\n=X=X=X= Saindo do Gerenciamento De Desconto...=X=X=X=");

                                            break;

                                        default :

                                            System.out.println("\n=X=X=X= COMANDO INVALIDO =X=X=X=\n");
                                            break;
                                    }

                                } while (opcao_desconto != 3);

                                break;


                            //CASE PARA SAIR DO MENU DO FUNCIONARIO
                            case 4:

                                System.out.println("\n=X=X=X=SAINDO DO MENU DE FUNCIONARIO =X=X=X=\n");

                                break;



                            default :

                                System.out.println("\n=X=X=X= COMANDO INVALIDO =X=X=X=");

                                break;




                        }




                    }while(opcao_menu_fun != 4);

                    //BREAK SOU FUNCIONARIO
                    break;


                //CLIENTE
                case 2:

                    do {

                        System.out.println("\n=====ESPACO CLIENTE======");
                        System.out.println("1  |  Entrar");
                        System.out.println("2  |  Sair");
                        System.out.print("\nDigite Um Numero Para PROSSEGUIR: ");
                        opcao_menu_cliente = opcoes.nextInt();

                        switch (opcao_menu_cliente) {

                            //ENTRAR
                            case 1:


                                System.out.print("\nDigite Seu Nome: ");
                                name_cliente = dados_cliente_s.nextLine();

                                for (int j = 0; j < t; j++) {

                                    if (vetor_clientes[j].equals(name_cliente)) {

                                        contador_itens = j;

                                        verdadeiro = 1;

                                        break;
                                    } else {

                                        if (vetor_clientes[j+prox] == null) {

                                            System.out.println("\nNome incorreto ou cliente nao cadastrado. \n");

                                            break;
                                        }
                                    }
                                }

                                //CAPTCHA

                                if (verdadeiro == 1) {

                                    do {


                                        Random gerador = new Random();
                                        num1 = (gerador.nextInt(100));
                                        num2 = (gerador.nextInt(10));
                                        resultado_captcha = (num1 + num2);

                                        System.out.println("\n*===PARA CONTINUAR RESOLVA O CAPTCHA===*\n");
                                        System.out.print(num1 + " + " + num2 + " = ");
                                        resposta_cliente = captcha.nextInt();
                                        if (resposta_cliente == resultado_captcha) {

                                            System.out.println("\n=*=*=*= CAPTCHA RESOLVIDO =*=*=*=\n");

                                        } else {
                                            System.out.println("\n=*=*=*= ERROU O CAPTCHA =*=*=*=\n=*=*=*= TENTE NOVAMENTE! =*=*=*=");
                                        }
                                    } while (resposta_cliente != resultado_captcha);

                                    System.out.println("========== OLA, '" + name_cliente + "' SEJA BEM-VINDO ===========");

                                    //LISTA PARA O CLIENTE


                                    carrinho = 0;
                                    contador = 0;
                                    vetor_codigos_produtos_clientes[contador] = 0;
                                    vetor_produtos_clientes[contador] = null;
                                    vetor_quantidades[contador] = 0;
                                    vetor_valores_cliente[contador] = 0;

                                    do {


                                        System.out.println("\nLISTA DE NOSSOS PRODUTOS \n");
                                        System.out.println("    CODIGO  |\tPRODUTO \t   |  VALOR UN.");
                                        for (int i = 0; i < vetor_produtos.length; i++) {

                                            if (vetor_produtos[i] != null) {

                                                System.out.print("\t   " + vetor_codigos_produtos[i]);
                                                System.out.print("    \t" + vetor_produtos[i]);

                                                if (vetor_produtos[i].length() <= 3) {

                                                    System.out.print("\t");
                                                }
                                                if (vetor_produtos[i].length() <= 7) {

                                                    System.out.print("\t");
                                                }
                                                System.out.print("\t      R$ " + vetor_valores[i] + "\n");

                                            }

                                        }

                                        System.out.println("\nValor atual do carrinho: R$ " + carrinho);
                                        System.out.println("\n 1  |  Adicionar Produtos No Carrinho");
                                        System.out.println(" 2  |  Remover Produto Do Carrinho");
                                        System.out.println(" 3  |  Fechar Compra");
                                        System.out.println(" 4  |  Sair\n");
                                        System.out.print("Digite Um Numero Para PROSSEGUIR: ");

                                        escolha_cliente = opcoes.nextInt();

                                        switch (escolha_cliente) {

                                            //CASO ADICIONAR AO CARRINHO
                                            case 1:


                                                System.out.println("\n    CODIGO  |\tPRODUTO \t   |  VALOR");
                                                for (int i = 0; i < vetor_produtos.length; i++) {

                                                    if (vetor_produtos[i] != null) {

                                                        System.out.print("\t   " + vetor_codigos_produtos[i]);
                                                        System.out.print("    \t" + vetor_produtos[i]);

                                                        if (vetor_produtos[i].length() <= 3) {

                                                            System.out.print("\t");
                                                        }
                                                        if (vetor_produtos[i].length() <= 7) {

                                                            System.out.print("\t");
                                                        }
                                                        System.out.print("\t      R$ " + vetor_valores[i] + "\n");

                                                    }

                                                }

                                                System.out.print("\nDigite o codigo do produto que quer adicionar ao carrinho: ");
                                                codigo_produtos_clientes = codigos_produtos.nextInt();

                                                vetor_codigos_produtos_clientes[contador] = codigo_produtos_clientes;
                                                vetor_produtos_clientes[contador] = vetor_produtos[codigo_produtos_clientes];
                                                vetor_valores_cliente[contador] = vetor_valores[codigo_produtos_clientes];

                                                System.out.print("Digite a quantidade: ");
                                                quantidade = qtd.nextInt();
                                                if (quantidade <= 0) {

                                                    System.out.println("\nDigite um numero valido");

                                                } else {

                                                    vetor_quantidades[contador] = quantidade;
                                                    carrinho += vetor_valores[codigo_produtos_clientes] * quantidade;

                                                    System.out.println("\nItem adicionado ao carrinho! \n");

                                                }


                                                if (opcao_continuar_compras == 2) {

                                                    System.out.println("\nCARRINHO: ");
                                                    System.out.println("\n    CODIGO  |\tPRODUTO \t   |\tQUANTIDADE \t   |\tVALOR UN.");

                                                    for (int i = 0; i < vetor_produtos_clientes.length; i++) {

                                                        if (vetor_produtos_clientes[i] != null) {

                                                            System.out.print("\t   " + vetor_codigos_produtos_clientes[i]);
                                                            System.out.print("    \t" + vetor_produtos_clientes[i]);

                                                            if (vetor_produtos_clientes[i].length() <= 3) {

                                                                System.out.print("\t\t\t");
                                                            }
                                                            if (vetor_produtos_clientes[i].length() <= 7) {

                                                                System.out.print("\t");
                                                            }
                                                            System.out.print("\t\t\t\t" + vetor_quantidades[i]);
                                                            System.out.print("\t\t\t      R$ " + vetor_valores_cliente[i] + "\n");

                                                        }

                                                    }

                                                }

                                                contador++;

                                                //BREAK ADICIONAR AO CARRINHO
                                                break;

                                            //CASO REMOVER DO CARRINHO
                                            case 2:

                                                System.out.println("\nCARRINHO: ");
                                                System.out.println("\n    CODIGO  |\tPRODUTO \t   |\tQUANTIDADE \t   |\tVALOR UN.");

                                                for (int i = 0; i < vetor_produtos_clientes.length; i++) {

                                                    if (vetor_produtos_clientes[i] != null) {

                                                        System.out.print("\t   " + vetor_codigos_produtos_clientes[i]);
                                                        System.out.print("    \t" + vetor_produtos_clientes[i]);

                                                        if (vetor_produtos_clientes[i].length() <= 3) {

                                                            System.out.print("\t\t\t");
                                                        }
                                                        if (vetor_produtos_clientes[i].length() <= 7) {

                                                            System.out.print("\t");
                                                        }
                                                        System.out.print("\t\t\t\t" + vetor_quantidades[i]);
                                                        System.out.print("\t\t\t      R$ " + vetor_valores_cliente[i] + "\n");

                                                    }

                                                }

                                                System.out.print("\nDigite o codigo do produto que quer remover do carrinho: ");
                                                codigo_produtos_clientes = codigos_produtos.nextInt();

                                                if (codigo_produtos_clientes < 0) {

                                                    System.out.println("\nPor favor digite um codigo valido \n");

                                                } else {

                                                    for (int j = 0; j < t; j++) {

                                                        if (codigo_produtos_clientes == vetor_codigos_produtos_clientes[j]) {

                                                            System.out.print("Digite a quantidade que quer retirar: ");
                                                            quantidade_retirar = qtd.nextInt();

                                                            if ((quantidade_retirar < 0) || (quantidade_retirar > vetor_quantidades[j])) {


                                                                System.out.println("\nPor favor digite uma quantidade valida ");


                                                            } else {

                                                                if (quantidade_retirar == vetor_quantidades[j]) {

                                                                    carrinho = carrinho - (vetor_valores_cliente[j] * vetor_quantidades[j]);

                                                                    for (int i = j; i < t; i++) {

                                                                        vetor_quantidades[i] = vetor_quantidades[i + prox];
                                                                        vetor_produtos_clientes[i] = vetor_produtos_clientes[i + prox];
                                                                        vetor_codigos_produtos_clientes[i] = vetor_codigos_produtos_clientes[i + prox];
                                                                        vetor_valores_cliente[i] = vetor_valores_cliente[i + prox];

                                                                        if (vetor_produtos_clientes[i + prox] == null) {

                                                                            vetor_quantidades[i] = 0;
                                                                            vetor_produtos_clientes[i] = null;
                                                                            vetor_codigos_produtos_clientes[i] = 0;
                                                                            vetor_valores_cliente[i] = 0;

                                                                            break;
                                                                        }
                                                                    }

                                                                    break;

                                                                } else {

                                                                    vetor_quantidades[j] = vetor_quantidades[j] - quantidade_retirar;
                                                                    carrinho = carrinho - (vetor_valores_cliente[j] * vetor_quantidades[j]);

                                                                    break;

                                                                }

                                                            }

                                                        }
                                                    }


                                                }

                                                System.out.println("\nItem removido com sucesso");

                                                //BREAK REMOVER DO CARRINHO
                                                break;

                                            //CASO FECHAR COMPRA
                                            case 3:

                                                System.out.println("\nCARRINHO: ");
                                                System.out.println("\n    CODIGO  |\tPRODUTO \t   |\tQUANTIDADE \t   |\tVALOR UN.");

                                                for (int i = 0; i < vetor_produtos_clientes.length; i++) {

                                                    if (vetor_produtos_clientes[i] != null) {

                                                        System.out.print("\t   " + vetor_codigos_produtos_clientes[i]);
                                                        System.out.print("    \t" + vetor_produtos_clientes[i]);

                                                        if (vetor_produtos_clientes[i].length() <= 3) {

                                                            System.out.print("\t\t\t");
                                                        }
                                                        if (vetor_produtos_clientes[i].length() <= 7) {

                                                            System.out.print("\t");
                                                        }
                                                        System.out.print("\t\t\t\t" + vetor_quantidades[i]);
                                                        System.out.print("\t\t\t      R$ " + vetor_valores_cliente[i] + "\n");

                                                    }

                                                }

                                                System.out.println("\nValor total do carrinho: R$ " + carrinho);

                                                //SO VAI PERGUNTAR SOBRE O CUPOM SE JA HOUVER UM CUPOM CADASTRADO
                                                if (nome_cupom != null) {

                                                    do {

                                                        System.out.println("\nDeseja adicionar um cupom de desconto? ");
                                                        System.out.println("1. para SIM");
                                                        System.out.println("2. para NAO");
                                                        System.out.print("Digite um numero para prosseguir: ");
                                                        opcao_cupom = opcoes.nextInt();

                                                        switch (opcao_cupom) {

                                                            //CASE ADICIONAR CUPOM
                                                            case 1:

                                                                System.out.print("\nDigite o nome do CUPOM de DESCONTO: ");
                                                                nome_cupom_cliente = nome_cupons.nextLine();

                                                                if (nome_cupom_cliente.equals(nome_cupom)) {

                                                                    System.out.println("\nNossos cupons de desconto caem inteiramente no valor total do carrinho");
                                                                    System.out.println("\nValor do Carrinho sem desconto: R$ " + carrinho);
                                                                    carrinho = carrinho - (carrinho * desconto);

                                                                    System.out.println("Valor do carrinho com desconto: R$ " + carrinho);
                                                                    vetor_carrinho[contador] = carrinho;

                                                                    opcao_cupom = 2;

                                                                } else {

                                                                    System.out.println("\nCupom nao encontrado");
                                                                }

                                                                //BREAK ADICIONAR CUPOM
                                                                break;

                                                            case 2:

                                                                System.out.println("Por favor consulte novamente o nome do desconto com a fonte \n");

                                                                break;

                                                            default:

                                                                System.out.println("\nPor favor digite uma opcao valida \n");

                                                                break;
                                                        }

                                                    } while (opcao_cupom != 2);

                                                }

                                                do {

                                                    System.out.println("\nEscolha uma opcao: ");
                                                    System.out.println("1. pagar com CARTAO (CREDITO)");
                                                    System.out.println("2. pagar com CARTAO (DEBITO)");
                                                    System.out.println("3. pagar A VISTA");
                                                    System.out.println("4. CANCELAR COMPRA");
                                                    System.out.print("Digite um numero para prosseguir: ");
                                                    forma_de_pagamento = opcoes.nextInt();

                                                    switch (forma_de_pagamento) {

                                                        //CARTAO CREDITO
                                                        case 1, 2, 3:

                                                            if (saldo >= carrinho) {

                                                                System.out.println("\nPagamento aprovado!! \n");

                                                                System.out.println("Voltando ao ESPACO CLIENTE...");

                                                                forma_de_pagamento = 4;
                                                                escolha_cliente = 4;

                                                            } else {

                                                                System.out.println("\nSaldo insuficiente \n");
                                                            }

                                                            //BREAK CARTAO CREDITO
                                                            break;

                                                        case 4:

                                                            System.out.println("COMPRA CANCELADA ");
                                                            System.out.println("Obrigado pela preferencia ");

                                                            System.out.println("Voltando ao ESPACO CLIENTE... \n");
                                                            escolha_cliente = 4;

                                                            break;

                                                        default:

                                                            System.out.println("\nPor favor digite uma opcao valida \n");

                                                            break;
                                                    }

                                                } while (forma_de_pagamento != 4);

                                                vetor_carrinho[contador_itens] += carrinho;
                                                contador_itens++;


                                                //BREAK FECHAR COMPRA
                                                break;
                                        }


                                    } while (escolha_cliente != 4);

                                }

                                //ENTRAR CLIENTE
                                break;


                            //SAIR DO ESPACO CLIENTE
                            case 2:

                                System.out.println("\n*SAINDO DO ESPACO CLIENTE* \n\n");

                                //SAIR DO ESPAÇO CLIENTE
                                break;

                            default:

                                System.out.println("\n*COMANDO INVALIDO*");
                                break;
                        }

                    } while (opcao_menu_cliente != 2);

                    //BREAK SOU CLIENTE
                    break;

                //DESLIGAR SISTEMA
                case 3:

                    System.out.println("\n=X=X=X= DESLIGANDO SISTEMA =X=X=X=\n\tOBRIGADO PELA PREFERENCIA!");
                    break;

                //OPÇÃO INICIAL
                default :

                    System.out.println("\n=X=X=X= COMANDO INVALIDO =X=X=X=\n");
                    break;
            }

        } while (opcao_inicial != 3);



    }


}
